pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        BUCKET_NAME = 'mybucketjenkins'
        GITHUB_REPO_URL = 'https://github.com/gokulanr22/AWSs3.git'
        GIT_CREDENTIALS_ID = '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'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clone the Git repository
                    git branch: 'main', url: GITHUB_REPO_URL
                }
            }
        }

        stage('Provision S3 Bucket') {
            steps {
                script {
                    // Create S3 bucket using AWS CLI
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY', credentialsId: '7eaab881-4303-4f8d-9e8c-aeb30054bb4b']])
                    sh "aws s3api create-bucket --bucket $BUCKET_NAME --region $AWS_DEFAULT_REGION"
                    echo "S3 bucket $BUCKET_NAME created successfully."
                }
            }
        }
    }
}
